<h1>Device Details</h1>
<h3>System Name</h3>
<table>
  <tbody>
  <tr>
    <td>
      Device Name
    </td>
    <td>
      <input id="device_name" type="text" maxlength="100" value="<%= @device_name %>" />
    </td>
  </tr>
  </tbody>
</table>
<h3>ID</h3>
<p><%= @device_id %></p>
<h3>Configuration Changes Pending</h3>
<p><%= @device_changes_pending %></p>
<h3>Capture Configuration</h3>
<table>
  <tbody>
  <tr>
    <td>
      Sampling Frequency
    </td>
    <td>
      <input id="sampling_frequency" type="text" maxlength="20" value="<%= @sampling_frequency %>" />
    </td>
  </tr>
  <tr>
    <td>Sensor Names</td>
    <td><%= @sensor_names.inspect %></td>
  </tr>
  <tr>
    <td>Sensor Bindings</td>
    <td><%= @sensor_bindings.inspect %></td>
  </tr>
  </tbody>
</table>