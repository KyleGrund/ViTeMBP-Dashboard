                        setTimeout(function() { updateDetails(chart) }, 100);
                    }
                }).fail(function() { updateDetails(chart); });
            }).fail(function() { updateDetails(chart); });
        }

        function startUpdate() {
            var chart = new google.visualization.LineChart(document.getElementById('sensor_data_curve_chart'));
