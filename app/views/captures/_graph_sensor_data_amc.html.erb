                        "useColumnNames": true
                    } );

                    <!-- amCharts javascript code -->
                    AmCharts.makeChart("chartdiv",
                        {
                            "type": "serial",
                            "categoryField": "category",
                            "startDuration": 1,
                            "categoryAxis": {
                                "gridPosition": "start"
                            },
                            "trendLines": [],
                            "graphs": [
                                {
                                    "balloonText": "[[title]] of [[category]]:[[value]]",
                                    "bullet": "round",
                                    "id": "AmGraph-1",
                                    "title": "graph 1",
                                    "valueField": "column-1"
